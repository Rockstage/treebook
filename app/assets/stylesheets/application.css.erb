/* ----------- ALBUM GRID ---------- */

.horizontalContainer {
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
}

.horizontalSlider {
	overflow-x: scroll;
	overflow-y: hidden;
	height: 100%;
	white-space: nowrap;
}

.horizontalContent {
	position: relative;
	left: 0;
	height: 100%;
}




.horizontalContent > * {
	border-sizing: border-box;
	float: left;
	height: 100%;
}


ul.horizontalGridList {
	display: block;
	float: left;
	width: 360px;
	margin: 0;
	white-space: normal;
	column-gap: 0;
	column-width: 360px;
	-webkit-column-gap: 0;
	-webkit-column-width: 360px;
	-moz-column-gap: 0;
	-moz-column-width: 360px;
	list-style: none;
	padding: 0;
}


ul.horizontalGridList li {
	column-break-inside: avoid;
	-webkit-column-break-inside: avoid;
	-moz-column-break-inside: avoid;
	margin: 0;
}

