<%= simple_form_for(@album) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { rows: 1, class: 'input-xxlarge large-text' } %>
  </div>

  <div class="form-actions">
    <button type="submit" data-theme="b" data-position="inline" data-icon="check">Create Album</submit>
  </div>
<% end %>
