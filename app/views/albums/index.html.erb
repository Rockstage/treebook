<% content_for :heading do %>
	<a href="#sidebar" data-position="inline" class="ui-btn-left" data-icon="home">Menu</a>
	<% if signed_in? && current_user == @user %>
	<h1>Gallery</h1>
	<%= link_to "New Album", new_album_path(current_user), data: { transition: 'slideup' } %>
	<% else %>
	<h1><%= @user.first_name %>'s Gallery</h1>
	<% end %>
<% end %>

<% content_for :footer do %>
	<div data-role="footer" data-position="fixed">
		<div data-role="navbar">
			<ul>
				<li><%= link_to "Stream", profile_path(@user) %></li>
				<li><%= link_to "About", profile_path(@user) %></li>
				<li><%= link_to "Gallery", albums_path(@user), class: 'ui-btn-active' %></li>
			</ul>
		</div>
	</div>
<% end %>

<section class="horizontalContainer">
	<div class="horizontalSlider">
		<div class="horizontalContent">
			<ul class="horizontalGridList album-grid-list">
				<% @albums.each do |album| %>
				  <li>
				  	<div class="album-grid-img" style="background-image: url(<%= album_thumbnail(album) %>);">
					    <div class="album-grid-overlay">
					    	<a href="<%= album_pictures_path(@user, album) %>" class="album-grid-overlay-link" data-transition="pop"></a>
						</div>
					</div>
				  </li>
				<% end %>
			</ul>
		</div>
	</div>
</section>

<script language="JavaScript" type="text/javascript">
$(document).ready(function() {

   $(".horizontalSlider").mousewheel(function(event, delta) {

      this.scrollLeft -= (delta * 30);
    
      event.preventDefault();

   });

});
</script>

<% if false %>
<%= link_to image_tag(album_thumbnail(album)), album_pictures_path(@user, album) %>
    <div class="album-grid-overlay">
	    <%= link_to "View Album", album_pictures_path(@user, album) %> | 
	    <%= link_to "Slideshow", slideshow_path(@user, album) %>
	    <% if can_edit_album?(album) %>
	    	| <%= link_to "Edit", edit_album_path(album) %>
	    	| <%= link_to "Delete", album_path(album), method: :delete, data: { confirm: "Are you sure?" } %>
	    <% end %>
	</div>
<% end %>