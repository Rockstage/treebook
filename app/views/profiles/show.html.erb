<% content_for :heading do %>
	<h1>
		&raquo; <%= @user.profile_name %> &laquo;
		<% if current_user != @user %>
			<%= link_to "+Connect", new_user_friendship_path(friend_id: @user), class: '', id: '', data: { friend_id: @user.to_param } %>
		<% end %>
	</h1>
	
<% end %>

<%= render "#{@user.role}" %>

<% content_for :footer do %>
	<div data-role="footer" data-position="fixed">
		<div data-role="navbar">
			<ul>
				<li><%= link_to "Stream", profile_path(@user), class: 'ui-btn-active' %></li>
				<li><%= link_to "About", about_me_path(@user), "data-transition" => "flip" %></li>
				<li><%= link_to "Gallery", albums_path(@user) %></li>
			</ul>
		</div>
	</div>
<% end %>