<div class="navbar-inner">
					<% if user_signed_in? %>
					<header id="sidebar-header">
				        <% if current_user.avatar? %>
				            <%= link_to(image_tag(current_user.avatar(:thumb)), profile_path(current_user)) %>
				        <% else %>
					        <%= link_to(image_tag(current_user.default_avatar_menu), profile_path(current_user)) %>
				        <% end %>
						<p><%= current_user.full_name %></p>
					</header>
					<% end %>
					<nav>
						<ul class="nav nav-tabs nav-stacked">
							<li>
								<% if user_signed_in? %>
									<%= link_to "Home", profile_path(current_user) %>
								<% else %>
									<%= link_to "Home", login_path %>
								<% end %>
							</li>
							<li>
								<% if user_signed_in? %>
									<a href="#browsePage" role="button" class="" data-toggle="modal">Browse</a>
								<% else %>
									<%= link_to "Browse", login_path %>
								<% end %>
							</li>
							<li>
								<% if user_signed_in? %>
									<%= link_to "Charts", profile_path(current_user) %>
								<% else %>
									<%= link_to "Charts", login_path %>
								<% end %>
							</li>
							<li>
								<% if user_signed_in? %>
									<%= link_to "Discover", profile_path(current_user) %>
								<% else %>
									<%= link_to "Discover", login_path %>
								<% end %>
							</li>
						</ul>
					</nav>
					<footer>
						<p>Terms of use</p>
					</footer>
				</div>