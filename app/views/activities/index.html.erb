<ul class="columns" id="activities">
	<h2>
		<% if (@user && @user == current_user) %>
		
			<% if false %>
			<%= link_to "Post a New Status", new_status_path, class: "btn btn-primary" %>
			<% end %>
			<%= simple_form_for(@status, html: { class: "form-inline", multipart: true }) do |f| %>
				<%= f.input :content, input_html: { rows: 1, class: 'medium-text' }, label: '', placeholder: 'What&#39;s on your mind, '.html_safe + current_user.first_name + '?' %>
			<% end %>
		<% else %>
		Recent activity
		<% end %>
	</h2>
		

<% @activities.reverse.each do |activity| %>
	
		<% if activity.targetable %>
			<li>
				<div id="feed" class="media">
					<%= avatar_profile_link activity.user, {}, class: 'pull-left thumb' %>
					<div id="feed-body" class="media-body">
						<h4 class="feed-heading media-heading">
							<%= activity.user.full_name %>
						</h4>
							<blockquote>
							<%= render partial: "activities/#{activity.targetable_type.underscore}/#{activity.action}", locals: { activity: activity } %>
							<small id="feed-small"><%= time_ago_in_words(activity.created_at) + ' ago' %></small>
							</blockquote>
					</div>
				</div>
				
			</li>
		<% end %>
	
<% end %>
</ul>

<script>
$("input").keypress(function(event) {
    if (event.which == 13) {
        event.preventDefault();
        $("form").submit();
    }
});
</script>
