<% content_for :heading do %>
  
  <h1>Rockstage.org</h1>
  
<% end %>

<div id="container" data-role="content" class="no-side-padding">
		<% if mobile_device? %>
			<div id="background-image" class="sign_up_page" style="background-image: url(<%= image_path('RSWelcome.png') %>)"></div>
		<% else %>
			<div id="background-image" class="sign_up_page" style="background-image: url(<%= image_path('RSWelcome.png') %>)"></div>
		<% end %>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {:data => {:ajax => 'false'}}) do |f| %>
		<div class="form-signin" data-enhance="false">
			<fieldset>
				<legend>Sign In <span class="pull-right gray smaller"><%= link_to "or Sign Up", new_user_registration_path %></span></legend>
				<div class="form-group">
					<%= f.input :email, input_html: { class: 'form-control' }, label: false, placeholder: 'Email', required: true %>
				</div>
				<div class="form-group">
					<%= f.input :password, input_html: { class: 'form-control' }, label: false, placeholder: 'Password', required: true %>
				</div>

		  <% if devise_mapping.rememberable? -%>
		  	<div class="checkbox">
		  	<label>
		  	<input name="user[remember_me]" id="user_remember_me" data-role="" type="checkbox">	Remember me?
		    	<option value="false">No</option>
		    	<option value="true">Yes</option>
		    </input>
			</label>
			<%= link_to "Forgot your password?", new_password_path(resource_name), "data-ajax" => "false", class: 'pull-right' %>
			</div>


			<% if false %>
		    <div class=""><%= f.input :remember_me, as: :boolean, input_html: { class: 'checkbox' } %></div>
		    
		    
		    <label>Remember me</label>
		    <select name="user[remember_me]" id="user_remember_me" data-role="slider" type="checkbox">
		    	<option value="false">No</option>
		    	<option value="true">Yes</option>
		    </select>
		    <% end %>
		  <% end -%>

		  
		  	<button type="submit" class="btn btn-primary btn-lg btn-block">Sign in!</button><br />
		  	<div class="row">
		  		<div class="col-xs-6">
			  	<%= link_to "Sign in | Twitter", user_omniauth_authorize_path(:twitter), "data-ajax" => "false", class: 'btn btn-info btn-block' %>
				</div>
				<div class="col-xs-6">
			  	<%= link_to "Sign in | Facebook", user_omniauth_authorize_path(:facebook), "data-ajax" => "false", class: 'btn btn-primary btn-block' %>
			  	</div>
			</div>
			<br />
			<%= link_to "Create an account!", new_registration_path(resource_name), class: 'pull-left' %>
			<%= link_to "Press Releases", '#', class: 'pull-right' %>
	  	</div>
	  	<%= render template: "generic/copyright" %>
		  	
		  	
		  

		</fieldset>
		<% end %>
		
		
	<% if false %>
		<div style="margin: auto 0;">
				<a class="twitter-timeline" href="https://twitter.com/RockStageOrg" data-widget-id="358720631455498243">Tweets by @RockStageOrg</a>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
		</div>
	<% end %>
	
</div>





