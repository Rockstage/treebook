<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { multipart: true, :method => :put, class: 'form-horizontal', "data-ajax" => "false" }) do |f| %>

  <fieldset>
    <legend>Basic Profile Information</legend>
    <%= f.input :artist_name, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :genre, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :location, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :bio, input_html: { class: 'input-xxlarge' } %>
  </fieldset>

  <fieldset>
    <legend>Additional Artist Information</legend>
    <%= f.input :members, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :influence, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :soundslike, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :contacts, input_html: { class: 'input-xxlarge' } %>
  </fieldset>

  <fieldset>
    <legend>Artist Profile Picture</legend>
    <p class="text-center gray">Avatar must be .jpg / .png / .gif and up to 3mb.</p>
    <%= f.input :avatar, as: :file %>
    <%= bootstrap_paperclip_avatar f, :avatar %>
  </fieldset>

  <fieldset>
    <legend>Account Info</legend>
    <%= f.input :role, disabled: true %>
    <%= f.input :email, disabled: true, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :profile_name, disabled: true, input_html: { class: 'input-xxlarge'} %>
  </fieldset>

  <fieldset>
    <legend>Update Password</legend>
    <%= f.input :password, hint: "Leave blank if you do not want to change it", input_html: { class: 'input-xxlarge', autocomplete: 'off', value: "" } %>
    <%= f.input :password_confirmation, input_html: { class: 'input-xxlarge', autocomplete: 'off' } %>
  </fieldset>

  <fieldset>
    <legend>Confirm Changes</legend>
    <%= f.input :current_password, hint: "We need your current password to confirm your changes", input_html: { class: 'input-xxlarge', autocomplete: 'off' } %>
  </fieldset>

  <div class="form-actions">
    <button type="submit" data-theme="b" data-position="inline" data-icon="check">Update</button>
    <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure you want to delete your account? Most of your content may be deleted.", :ajax => 'false' }, :method => :delete, class: 'pull-right' %>
  </div>
<% end %>