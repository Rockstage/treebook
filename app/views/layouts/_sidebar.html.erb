<div id="sidebar-inner">
	<% if user_signed_in? %>
	<header id="sidebar-header" class="center-contents bottom-spacing">
        <% if current_user.avatar? %>
            <%= link_to(image_tag(current_user.avatar(:medium)), profile_path(current_user), class: 'smooth-image') %>
        <% else %>
	        <%= link_to(image_tag(current_user.default_avatar_menu), profile_path(current_user), class: 'smooth-image') %>
        <% end %>
		<p><%= current_user.full_name %></p>
	</header>
	<% end %>
</div>

<ul data-role="listview" data-theme="a" id="sidebar-links">
	<% if user_signed_in? %>
		<li><%= link_to "Home", profile_path(current_user), "data-transition" => "slidedown" %></li>
		<li><a href="#browsePage" role="button" class="" data-toggle="modal">Browse</a></li>
		<li><%= link_to "Charts", profile_path(current_user) %></li>
		<li><%= link_to "Discover", profile_path(current_user) %></li>
	<% else %>
		<li><%= link_to "Home", login_path %></li>
		<li><%= link_to "Browse", login_path %></li>
		<li><%= link_to "Charts", login_path %></li>
		<li><%= link_to "Discover", login_path %></li>
		<li><a href="<%= new_user_session_path %>">Sign in</a></li>
	<% end %>
</ul>
<div>
	<br />
	<footer>
		<p class="text-center">Terms of use</p>
	</footer>
	<%= link_to "Close", "#sidebar", data: { rel: 'close', role: 'button', icon: 'minus' } %>
</div>