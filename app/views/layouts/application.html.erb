<!DOCTYPE html>
<html>
<head>
  <title>Rockstage</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body onload="startTime(); onLoad();">
	<div id="header">
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner header_menu">
				<div class="container-fluid">
					<a id="clock" class="brand" href="<%= root_path %>"></a>
					<ul class="nav">
						<li class="divider-vertical"><%= link_to "All Statuses", feed_path %></li>
					</ul>
					<ul class="nav pull-right">
						<% if user_signed_in? %>
							<li>
								<p>Friends</p>
							</li>
							<li><%= link_to "Albums", albums_path(current_user) %></li>
							<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
							<li><%= link_to "Log Out", logout_path %></li>
						<% else %>
							<li><%= link_to "Register", register_path %></li>
							<li><%= link_to "Log in", login_path %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div id="container">
		<%= render_breadcrumbs %>
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>">
				<button class="close" data-dismiss="alert">x</button>
				<%= message %>
			</div>
		<% end %>

		
		<section id="sidebar">
			<div class="navbar-inner">
				<% if user_signed_in? %>
				<header id="sidebar-header">
			        <% if current_user.avatar? %>
			            <%= link_to(image_tag(current_user.avatar(:thumb)), profile_path(current_user)) %>
			        <% else %>
				        <%= link_to(image_tag(current_user.default_avatar_menu), profile_path(current_user)) %>
			        <% end %>
					<p><%= current_user.full_name %></p>
				</header>
				<% end %>
				<nav>
					<ul class="nav nav-tabs nav-stacked">
						<li>
							<% if user_signed_in? %>
								<%= link_to "Home", profile_path(current_user) %>
							<% else %>
								<%= link_to "Home", login_path %>
							<% end %>
						</li>
						<li>
							<% if user_signed_in? %>
								<a href="#browsePage" role="button" class="" data-toggle="modal">Browse</a>
							<% else %>
								<%= link_to "Browse", login_path %>
							<% end %>
						</li>
						<li>
							<% if user_signed_in? %>
								<%= link_to "Charts", profile_path(current_user) %>
							<% else %>
								<%= link_to "Charts", login_path %>
							<% end %>
						</li>
						<li>
							<% if user_signed_in? %>
								<%= link_to "Discover", profile_path(current_user) %>
							<% else %>
								<%= link_to "Discover", login_path %>
							<% end %>
						</li>
					</ul>
				</nav>
				<footer>
					<p>Terms of use</p>
				</footer>
			</div>
		</section>

		<div id="wrapper" class="yield">
			<%= yield %>
		</div>
	</div>


	<div id="modals">
		<div id="browsePage" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h3 id="myModalLabel">Browse Page</h3>
			</div>
			<div class="modal-body">
				<p>Browse this and that</p>
			</div>
			<div class="modal-footer">
				<p>Terms of Service</p>
			</div>
		</div>
	</div>
</body>
</html>
